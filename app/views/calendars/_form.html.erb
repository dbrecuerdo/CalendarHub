<%= form_for(calendar) do |f| %>
  <% if calendar.errors.any? %>
    <div class="list-group" id="error_explanation">
      <div class="list-group-item list-group-item-danger">
        <%= pluralize(calendar.errors.count, "error") %> prohibited this event from being saved:
      </div>
      <ul class="list-group-item">
        <% calendar.errors.full_messages.each do |message| %>
          <li class="list-group-item-text">
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description , class: "form-control"%>
    </div>

    <div class="actions pull-right">
      <%= link_to 'Back', events_path, class: "btn black" %>
      <%= f.submit class: "btn btn-primary"%>
    </div>
<% end %>
