

<h1><%= @event.title %></h1>

in <%= link_to @event.calendar.title, @event.calendar %>, category <%=link_to @event.event_type.event_type %>

<p>
  <strong>Venue:</strong>
  <%= @event.venue %>
</p>

<p>
  <strong>Start:</strong>
  <%= @event.start.to_formatted_s(:long)  %>
</p>

<p>
  <strong>End:</strong>
  <%= @event.end.to_formatted_s(:long)  %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<div class="pull-right">
  <%= link_to 'Back', events_path, class: "btn black" %>
  <%= link_to 'Edit', edit_event_path(@event), class: "btn btn-primary" %>
  <%= link_to 'Delete', @event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
</div>
