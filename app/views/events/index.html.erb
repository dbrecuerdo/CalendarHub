<%= month_calendar events: @events do |date, events| %>
  <%= date.day %>

  <% events.each do |event| %>
    <div class = "<%= event.event_type.event_type %>">
      <%= link_to event.title, event %>
    </div>
  <% end %>
<% end %>

<% content_for(:upper_side_bar) do %>
  <%= render 'calendars/calendar_list' %>
<% end %>

<% content_for(:event_action) do %>
  <%= render 'events/events_action' %>
<% end %>

<% content_for(:lower_side_bar) do %>
  <%= render 'events/category_list' %>
<% end %>
