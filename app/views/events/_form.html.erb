    <%= form_for(event) do |f| %>
      <% if event.errors.any? %>
        <div class="list-group" id="error_explanation">
          <div class="listr-group-item black">
            <%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:
          </div>
          <% event.errors.full_messages.each do |message| %>
            <div class="list-group-item">
              <%= message %>
            </div>
          <% end %>
        </div>
      <% end %>
<form class="well col-md-12">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, placeholder: :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :event_type_id %>
        <%= f.collection_select(:event_type_id, EventType.all,
                        :id, :event_type, {:prompt => 'Select event type'}, class: "form-control") %>
      </div>

      <div class="form-group">
        <%= f.label :venue %>
        <%= f.text_field :venue , class: "form-control"%>
      </div>

      <div class="form-inline">
        <div class="form-group">
          <%= f.label :start %>
          <div class='input-group date' id='datetimepicker_start'>
            <%= f.text_field :start, class: 'form-control' %>
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>


        <div class="form-group">
          <%= f.label :end %>
          <div class='input-group date' id='datetimepicker_end'>
            <%= f.text_field :end, class: 'form-control' %>
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>
      </div>
      <script type="text/javascript">
      $(function () {
              $('#datetimepicker_start').datetimepicker({
                format: 'YYYY-MM-DD HH:mm',
                sideBySide: true
              });
              $('#datetimepicker_end').datetimepicker({
                  useCurrent: false, //Important! See issue #1075
                  format: 'YYYY-MM-DD HH:mm',
                  //inline: true,
                  sideBySide: true,
                  //collapse: true
              });
              $("#datetimepicker_start").on("dp.change", function (e) {
                  $('#datetimepicker_end').data("DateTimePicker").minDate(e.date);
              });

              $("#datetimepicker_end").on("dp.change", function (e) {
                  $('#datetimepicker_start').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description , class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :calendar_id %>
        <%= f.collection_select(:calendar_id, Calendar.all,
                      :id, :title, {:prompt => 'Select calendar'}, class: "form-control") %>
      </div>

      <div class="actions pull-right">
        <%= link_to 'Back', events_path, class: "btn black" %>
        <%= f.submit class: "btn btn-primary"%>
      </div>
    <% end %>
</form>
